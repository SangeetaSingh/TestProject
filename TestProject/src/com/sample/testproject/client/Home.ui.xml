<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
	xmlns:res='urn:with:com.sample.testproject.client.HomeResources'>
	<ui:with field="res" type="com.sample.testproject.client.HomeResources" />
   
	
	<gwt:HTMLPanel ui:field="basePanel" >
		<div align="center">
		   <gwt:VerticalPanel ui:field="mainPanel"  styleName="{res.style.background}">
		       <gwt:Label ui:field="label" />
		          <gwt:HorizontalPanel ui:field="addPanel" verticalAlignment="middle">
		              <gwt:TextBox ui:field="addItem" text="Add new item.." styleName="{res.style.box}" />
		              <gwt:Button ui:field="buttonSubmit" text="Create" styleName="{res.style.loginButton}" />
		              <gwt:Button ui:field="buttonDelete" text="Delete" styleName="{res.style.loginButton}" />
		         </gwt:HorizontalPanel>
		         <gwt:Tree ui:field="tree"/>
		    
		    </gwt:VerticalPanel>
		</div>
	</gwt:HTMLPanel>
</ui:UiBinder> 